{
  // ═══════════════════════════════════════════════════════════════════
  // VS CODE CONFIGURATION - SUPPRESS ALL WELCOME/SETUP SCREENS
  // ═══════════════════════════════════════════════════════════════════

  // Disable ALL welcome screens and walkthroughs
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "gettingStarted.showOnStartup": false,

  // CRITICAL: Force settings to apply to all profiles (required for VS Code Web/Codespaces)
  // GitHub Issues #134073, #160635: VS Code Web IGNORES startupEditor without this!
  "workbench.settings.applyToAllProfiles": [
    "workbench.startupEditor",
    "workbench.welcomePage.walkthroughs.openOnInstall",
    "gettingStarted.showOnStartup",
    "workbench.tips.enabled"
  ],

  // Disable extension welcome pages and getting started
  "extensions.ignoreRecommendations": true,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // CRITICAL: Block specific unwanted extensions from being recommended
  "extensions.ignoredRecommendations": [
    "hocklabs.test-explorer",
    "littlefox.test-explorer",
    "kombai.kombai",
    "saoudrizwan.claude-dev",
    "cline.cline"
  ],

  // Disable all prompts and notifications
  "update.mode": "none",
  "update.showReleaseNotes": false,
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,

  // Disable specific extension welcome screens
  "kombai.showWelcome": false,
  "kombai.showGettingStarted": false,
  "python.showStartPage": false,
  "jupyter.showStartPage": false,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,

  // Disable survey prompts
  "workbench.survey.showSurvey": false,

  // Disable tutorial/walkthrough overlays
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  // Clean editor on startup - no previews or popups
  "workbench.editor.enablePreview": false,
  "window.restoreWindows": "none",

  // Disable all notification popups
  "git.showPushSuccessNotification": false,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.sideBar.location": "left",

  // Terminal settings - clean and functional
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.confirmOnKill": "never",

  // ═══════════════════════════════════════════════════════════════════
  // SYSTEM STATUS LINE MONITOR
  // ═══════════════════════════════════════════════════════════════════
  // Requires: Custom Status Bar extension (jnbt.vscode-custom-status-bar)
  // Install: code --install-extension jnbt.vscode-custom-status-bar
  // Start monitor: scripts/statusline-monitor.sh monitor 5 &

  "customStatusBar.items": [
    {
      "id": "system-status",
      "text": "$(pulse) Loading...",
      "tooltip": "System Status: CPU, Memory, Context",
      "command": "workbench.action.terminal.toggleTerminal",
      "alignment": "right",
      "priority": 100,
      "interval": 5000,
      "textSource": "file:///tmp/statusline.txt"
    }
  ]
}
